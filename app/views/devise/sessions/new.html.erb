<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ログイン</h2>
        <%# フォームを表示する %>
        <%= form_with model:@user, url: user_session_path, local: true do |f| %>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, placeholder: "メールアドレスを入力", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード（6文字以上）" %><br />
            <%= f.password_field :password, placeholder: "英字数字の両方を含む", autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: :form__btn %>
          </div>
        <% end %>
        <%# <%= render "devise/shared/links" %>
        <%# フォームを表示する %>
    </div>
  </div>
</div>

