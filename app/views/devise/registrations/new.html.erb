<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, placeholder: "かなカナ漢字ローマ字が使えます" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, placeholder: "メールアドレスを入力してください", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %><br />
    <%= f.password_field :password, placeholder: "英字と数字の両方を含めて設定してください", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力して下さい", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :birth, "生年月日" %><br />
    <%= raw sprintf(
                  f.date_select(
                    :birth,
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1980,
                    end_year: Time.now.year,
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
