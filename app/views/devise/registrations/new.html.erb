<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規登録</h2>
        <%# 部分テンプレートでフォームを表示する %>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name, "ユーザー名" %><br />
            <%= f.text_field :name, placeholder: "かなカナ漢字ローマ字" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, placeholder: "メールアドレスを入力", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード（6文字以上）" %><br />
            <%= f.password_field :password, placeholder: "英字数字の両方を含む", autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード再入力" %><br />
            <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力", autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :birth, "生年月日" %><br />
            <div class="input-date">
            <%= raw sprintf(
                          f.date_select(
                            :birth,
                            use_month_numbers: true,
                            prompt:'--',
                            start_year: 1980,
                            end_year: Time.now.year,
                            date_separator: '%s'),
                          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: :form__btn %>
          </div>
        <% end %>
        <%# <%= render "devise/shared/links" %>
        <%# 部分テンプレートでフォームを表示する %>
    </div>
  </div>
</div>
