<div class="card">
  <div class="card__image">
    <%= link_to image_tag(item.image.variant(resize: '500x500')), item_path(item.id) %>
  </div>
  <div class="card__name">
    <%= item.name %>
  </div>
  <div class="card__user">
    <%= link_to "by #{item.user.name}", user_path(item.user_id) %>
  </div>
</div>

